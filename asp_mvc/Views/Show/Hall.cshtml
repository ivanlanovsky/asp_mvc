@model asp_mvc.Models.Hall
@{
    Layout = null;
    int n = 0;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Movies</title>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>
    <div style="display:grid">
        <div style="display: inline-grid; justify-content:center;text-align: center">
            <h3>Select seats you want to order</h3>
            <div style="border: 3px solid blue; margin-top:30px;
                    margin-bottom:50px; text-align:center">
                Screen
            </div>
            @foreach (List<Seat> row in Model.Seats)
            {
                <div style="justify-content:center">
                    @foreach (Seat seat in row)
                    {
                        {
                            n += 1;
                        }
                        <div style="display:inline-grid; text-align:center;
                        border: 1px solid; height: 50px;
                        width: 70px; margin: 15px">
                            <h3><label>@n</label> <input type="checkbox" value=seat /></h3>
                        </div>
                    }
                </div>
                <br>
            }
            <br />
            <a class="btn btn-primary" href="~/Home/Index">Order</a>
        </div>
    </div>
</body>
</html>
