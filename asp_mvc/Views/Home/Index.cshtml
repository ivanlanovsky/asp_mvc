@model IEnumerable<asp_mvc.Models.Show>
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="/css/style.css" />
</head>
<body>
    <div style="overflow-x:scroll; overflow-y:hidden; white-space:nowrap;">
        @foreach (asp_mvc.Models.Show s in Model)
        {
            <div style="display:inline-flex; margin:5px">
                <a href="~/Home/Show/@s.Id"><img src="~/images/placeholder.png" height="100" width="120" /></a>
            </div>
        }

    </div>


    <div class="columns">
        <div class="flex-child">
            <h3>Genres: @ViewBag.counts[0]</h3>
            <a class="btn btn-primary" asp-action="ListGenres">List of all genres</a>
            <br>
            <a asp-action="GenreForm">add new</a>
        </div>
        <div class="flex-child">
            <h3>Movies: @ViewBag.counts[1]</h3>
            <a class="btn btn-primary" asp-action="ListMovies">List of all movies</a>
            <br>
            <a asp-action="MovieForm">add new</a>
        </div>
        <div class="flex-child">
            <h3>Shows: @ViewBag.counts[2]</h3>
            <a class="btn btn-primary" asp-action="ListShows">List of all shows</a>
            <br>
            <a asp-action="ShowForm">add new</a>
        </div>

    </div>

</body>
</html>
